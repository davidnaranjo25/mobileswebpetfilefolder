<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Espacio superior para dejar margen por la cámara/notch -->
    <View
        android:layout_width="match_parent"
        android:layout_height="32dp" />

    <!-- Encabezado: logo y título, fuera de la card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginBottom="12dp">

        <ImageView
            android:id="@+id/logoFitPet"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/logofitpet"
            android:contentDescription="Logo Fit Pet"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fit Pet Veterinarios"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#111111"/>
    </LinearLayout>

    <!-- Card de datos del veterinario -->
    <LinearLayout
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@drawable/card_bg"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvNombreVeterinario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#111111"
            android:text="Nombre"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginBottom="2dp"/>

        <TextView
            android:id="@+id/tvCorreoVeterinario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#111111"
            android:text="Correo"
            android:textSize="13sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvTelefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#111111"
            android:text="Teléfono"
            android:textSize="13sp"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/tvPais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#111111"
            android:text="País"
            android:textSize="13sp"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/tvCiudad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#111111"
            android:text="Ciudad"
            android:textSize="13sp"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/tvDireccionLocal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#111111"
            android:text="Dirección del local"
            android:textSize="13sp"
            android:layout_marginTop="2dp"/>

    </LinearLayout>
</LinearLayout>